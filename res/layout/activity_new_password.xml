<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.ac.asojuku.jousen.program_kouza.NewPasswordActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/HeadNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="会員登録"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/TextPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="パスワードを入力してください" />

        <EditText
            android:id="@+id/TextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextPasswordAgainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="もう一度パスワードを入力してください" />

        <EditText
            android:id="@+id/TextPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:ems="10" />

        <Button
            android:id="@+id/ButtonNextCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="決定" />

    </LinearLayout>

</RelativeLayout>
